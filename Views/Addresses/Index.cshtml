@model IEnumerable<Address>



@{
    ViewData["Title"] = "List of Addresses";

}

<h5><b> Showing : Address Details of Persons</b></h5>
<div class="row">
    <div class="col">

        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr class="text-center">
                    <th> House No </th>
                    <th> Street </th>
                    <th> City </th>
                    <th> District </th>
                    <th> Zip Code </th>
                    <th> Person ID </th>


                    <th> Actions </th>

                </tr>
            </thead>


            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td class="align-middle"> @Html.DisplayFor(modelItem => item.HouseNo) </td>
                        <td class="align-middle"> @Html.DisplayFor(modelItem => item.Street)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.City)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.District)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.ZipCode)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.PersonId)</td>




                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit</a> |
                            
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>

    </div>

</div>
