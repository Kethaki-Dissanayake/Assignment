@model IEnumerable<Person>



@{
    ViewData["Title"] = "List of Persons";

}

<div class="row">
  <div class="col md-8">
        <h5><b> Showing : Person Details</b></h5>
        <div class="text-white">
            <a asp-controller="Persons" asp-action="Create" class="btn btn-info"><i class="bi bi-plus-circle"></i>Add</a>

        </div>
  </div>
  <div class="col-md-4">
        <form class="form-inline my-2 my-lg-0" asp-controller="Persons" asp-action="Search" style="padding-right:0px">
            <input name="searchString" type="text" class="form-control" placeholder="Search for Person...">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
      </form>
  </div>

</div>


<div class="row">
    <div class="col">

        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr class="text-center">
                    <th> @Html.DisplayNameFor(model => model.ProfilePicture) </th>
                    <th> @Html.DisplayNameFor(model => model.FirstName) </th>
                    <th> @Html.DisplayNameFor(model => model.LastName) </th>
                    <th> @Html.DisplayNameFor(model => model.SSN) </th>
                   
                    <th> Actions </th>

                </tr>
            </thead>


            <tbody>
                
                @foreach(var item in Model)
                {
                <tr class="align-content-center">
                <td class="align-middle">
                    <img class="rounded-1" src="@item.ProfilePicture" alt="@item.FirstName" style="max-width:80px"/>
                </td>
                <td class="align-middle"> @Html.DisplayFor(modelItem => item.FirstName) </td>
                <td class="align-middle"> @Html.DisplayFor(modelItem => item.LastName)</td>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.SSN)</td>
                        

                        
                        
                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.PersonId"><i class="bi bi-pencil-square"></i> Edit</a> |
                    <a class="btn btn-outline-info" asp-controller="Persons" asp-action="Details" asp-route-id="@item.PersonId"><i class="bi bi-eye"></i> Details</a> |
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.PersonId"><i class="bi bi-trash"></i> Delete</a>
                </td>
                </tr>
                }

                
            </tbody>
        </table>

    </div>

</div>

