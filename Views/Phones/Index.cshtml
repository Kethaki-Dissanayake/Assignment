@model IEnumerable<Phone>



@{
    ViewData["Title"] = "List of Phones";

}

<h5><b> Showing : Contact Details of Persons</b></h5>
<div class="row">
    <div class="col">

        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr class="text-center">
                    <th> Mobile </th>
                    <th> Fixed Line </th>
                    <th> Person ID </th>
                    

                    <th> Actions </th>

                </tr>
            </thead>


            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td class="align-middle"> @Html.DisplayFor(modelItem => item.Mobile) </td>
                        <td class="align-middle"> @Html.DisplayFor(modelItem => item.FixedLine)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.PersonId)</td>




                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit</a> |
                           
                            <a class="btn btn-outline-danger"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>

    </div>

</div>
